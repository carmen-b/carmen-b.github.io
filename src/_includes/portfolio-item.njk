---
layout: layout.njk
eleventyComputed:
  title: "{{ title }} | Carmen Balaban"
---
<section class="section">
  <div class="container">
    <div class="project-layout">
      <div class="project-gallery" data-carousel>
        <button class="carousel-control prev" type="button" aria-label="Previous image">Previous</button>
        <div id="portfolioItemCarrousel" class="item-carousel" tabindex="0">
          {% for image in images %}
          <figure class="item-slide">
            <img src="{{ image }}" alt="{{ title }} image {{ loop.index }}">
          </figure>
          {% endfor %}
        </div>
        <button class="carousel-control next" type="button" aria-label="Next image">Next</button>
        <div class="carousel-dots" aria-hidden="true"></div>
      </div>

      <aside class="project-content">
        <p class="eyebrow">{{ categoryLabel }}</p>
        <h1>{{ title }}</h1>
        <div class="project-description">
          {{ content | safe }}
        </div>
        <a class="text-link" href="/portfolio/{{ category }}/">Back to {{ categoryLabel }}</a>
      </aside>
    </div>
  </div>
</section>
