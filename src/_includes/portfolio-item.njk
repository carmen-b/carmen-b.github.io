---
layout: layout.njk
eleventyComputed:
  title: "{{ title }} | Carmen Balaban"
---
<div class="container page">
  <div class="row">
    <div class="col-md-8">
      <div id="portfolioItemCarrousel" class="owl-carousel owl-theme">
        {% for image in images %}
        <div class="item">
          <img src="{{ image }}" alt="{{ title }} image {{ loop.index }}">
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="col-md-4 item-description">
      <h2>{{ title }}</h2>
      {{ content | safe }}
    </div>
  </div>
</div>
