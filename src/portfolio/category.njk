---
layout: layout.njk
pagination:
  data: collections.portfolioCategories
  size: 1
  alias: category
permalink: "/portfolio/{{ category.slug }}/index.html"
eleventyComputed:
  title: "{{ category.label }} Portfolio | Carmen Balaban"
---
<section class="section">
  <div class="container">
    <div class="section-header centered">
      <h1>{{ category.heading }}</h1>
      <p>{{ category.description }}</p>
    </div>

    <nav aria-label="Portfolio filters">
      <ul class="filter-list">
        <li><a href="/portfolio/">All</a></li>
        {% for categoryItem in collections.portfolioCategories %}
        <li>
          <a href="/portfolio/{{ categoryItem.slug }}/" {% if categoryItem.slug == category.slug %}class="is-active"{% endif %}>{{ categoryItem.label }}</a>
        </li>
        {% endfor %}
      </ul>
    </nav>

    <div class="portfolio-grid">
      {% for item in collections.portfolioItems %}
      {% if item.data.category == category.slug %}
      <article class="portfolio-card">
        <a href="{{ item.data.slug }}.html" title="{{ item.data.title }}">
          <img src="{{ item.data.slug }}-thumb.jpg" alt="{{ item.data.title }} thumbnail">
          <div class="portfolio-meta">
            <h2>{{ item.data.title }}</h2>
            <p>{{ category.label }}</p>
          </div>
        </a>
      </article>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
