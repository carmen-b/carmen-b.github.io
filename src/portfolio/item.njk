---
layout: layout.njk
pagination:
  data: portfolio.items
  size: 1
  alias: item
permalink: "/portfolio/{{ item.category }}/{{ item.slug }}.html"
eleventyComputed:
  title: "{{ item.title }} | Carmen Balaban"
---
<div class="container page">
  <div class="row">
    <div class="col-md-8">
      <div id="portfolioItemCarrousel" class="owl-carousel owl-theme">
        {% for image in item.images %}
        <div class="item">
          <img src="{{ image }}" alt="{{ item.title }} image {{ loop.index }}">
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="col-md-4 item-description">
      <h2>{{ item.title }}</h2>
      {{ item.markdown | markdown | safe }}
    </div>
  </div>
</div>
